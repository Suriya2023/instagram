        const dropdownMenu = document.getElementById('dropdownMenu');

        // Toggle dropdown menu and adjust its position above the menu button
        menuButton.addEventListener('click', () => {
            dropdownMenu.classList.toggle('hidden');

            // Get the position of the "More" button
            const menuButtonPosition = menuButton.getBoundingClientRect();

            // Adjust dropdown position to appear above the "More" button
            if (!dropdownMenu.classList.contains('hidden')) {
                dropdownMenu.style.top = `${menuButtonPosition.top - dropdownMenu.offsetHeight - 5}px`; // 5px for spacing
            }
        });
    </script>
    <script>
        document.getElementById('toggleButton').addEventListener('click', function () {
            document.getElementById('noneedit').style.display = 'block';
            document.getElementById('none1').style.display = 'none';
        });
    </script>

    <script>
        document.getElementById('image').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profileimage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (e) {
                const imageSrc = e.target.result;
                document.getElementById('imagePreviewModal').src = imageSrc;
                document.getElementById('imagePreviewUpload').src = imageSrc;
            };

            reader.readAsDataURL(file);
        }
    </script>

    <script>
        function toggleProfile() {
            const main1 = document.querySelector('#mainsidebar');
            const main2 = document.querySelector('#mainsidebar2');
            const modal1 = document.querySelector('#none1');
            const modal2 = document.querySelector('#noneedit'); // New element

            if (modal1.style.display === 'none' || modal1.style.display === '') {
                // Show Profile
                modal1.style.display = 'block';
                if (modal2) modal2.style.display = 'none'; // Hide other modal if exists

                // Hide sidebars
                main1.style.display = 'none';
                main2.style.display = 'none';
            } else {
                // Hide Profile
                modal1.style.display = 'none';

                // Show sidebars
                main1.style.display = '';
                main2.style.display = '';
            }
        }
    </script>

